{
  "name": "music_player_backend",
  "version": "1.0.0",
  "description": "Epic backend for my web based music player",
  "main": "dist/app.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Nierot/music_player_backend.git"
  },
  "scripts": {
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node --inspect=5858 -r ts-node/register ./src/app.ts",
    "start:watch": "nodemon"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
      ],
      "watch": [
        "src"
      ],
      "exec": "npm start",
      "ext": "ts"
    },
  "author": "Nierot",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/Nierot/music_player_backend/issues"
  },
  "homepage": "https://github.com/Nierot/music_player_backend#readme",
  "devDependencies": {
    "@types/node": "^14.11.2",
    "eslint": "^7.10.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.4",
    "ts-node": "^9.0.0",
    "tslint": "^6.1.3",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/express": "^4.17.8"
  }
}
